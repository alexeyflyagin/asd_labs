{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Lab_1 Release",
            "type": "cppbuild",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-I",
                "include",
                "-g",
                "src/lab_1.cpp",
                "src/models.cpp",
                "src/utils.cpp",
                "-o",
                "${workspaceFolder}/app.exe",
                "-std=c++17"
            ],
            "group": {
                "kind": "build",
            },
            "problemMatcher": ["$gcc"]
        },
